{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "build",

    "baseUrl": "./src",
    "paths": {
      "#mathfuncs/*": ["./functions/common/utils/math/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}